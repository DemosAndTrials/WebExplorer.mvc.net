@model WebExplorer.Models.ExplorerViewModel
@{
    ViewBag.Title = "Home Page";
}

<p>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>Web Explorer</h4>
                </div>

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th class="text-center">
                                <span class="glyphicon glyphicon-info-sign"></span>
                            </th>
                            <th class="text-center">
                                <span class="glyphicon glyphicon-floppy-remove"></span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td width="20">
                                    <span class="glyphicon glyphicon-floppy-disk"></span>
                                </td>
                                <td width="80%">
                                    <a href="@item.Url">@item.Name</a>
                                </td>
                                <td class="text-center" width="10%">
                                    <a class="label label-info" data-toggle="modal" id="deleteComment" href="#confirmDeleteComment" data-id="@item.Path" data-url="/Movies/DeleteComment">Info</a>
                                </td>
                                <td class="text-center" width="10%">
                                    <a class="label label-danger" data-toggle="modal" id="deleteComment" href="#confirmDeleteComment" data-id="@item.Path" data-url="/Movies/DeleteComment">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-md-2"></div>
    </div>
</p>