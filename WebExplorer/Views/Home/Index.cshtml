@model WebExplorer.Models.ExplorerViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2>ASP.NET</h2>
    <p>
        @foreach (var item in Model.Items)
        {
            <div>
                <span class="label label-default">[ @item.Name]</span>
                <br />
                @*@Html.ActionLink("Delete", "DeleteComment", new { id = item.Id }, new { @class = "label label-danger", @id = "confirmDelete" })*@
                <a class="label label-danger" data-toggle="modal" id="deleteComment" href="#confirmDeleteComment" data-id="@item.Path" data-url="/Movies/DeleteComment">Delete</a>
            </div>
        }
    </p>
</div>

